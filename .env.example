# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Slack
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...   # For Socket Mode
SLACK_SIGNING_SECRET=...

# Agent Configuration
AGENT_MODEL=claude-opus-4-5
AGENT_MAX_TURNS=50  # Prevent infinite loops

# Slack Configuration
SLACK_SOCKET_MODE=true

# Session Configuration
SESSION_DATABASE_PATH=./data/sessions.db
SESSION_EXPIRE_DAYS=7

# Tool Configuration
TOOL_SHELL_ALLOWED_COMMANDS=*  # Or comma-separated list: git,npm,ls
TOOL_SHELL_TIMEOUT_MS=30000
TOOL_BROWSER_WHITELIST=*.google.com,*.github.com,*.stackoverflow.com

# Apple Services
APPLE_CALENDAR_NAME=Personal  # Default calendar for calendar operations

# Obsidian Vault (optional - enables /vault skill for knowledge management)
# VAULT_PATH=/path/to/your/obsidian/vault

# Memory System (cross-thread memory extraction)
MEMORY_ENABLED=true
MEMORY_PATH=data/memory  # Relative to project root; stores daily markdown logs

# Proactive Features (heartbeat + scheduler)
PROACTIVE_ENABLED=false              # Set to true to enable proactive features
PROACTIVE_HEARTBEAT_INTERVAL=30      # Minutes between heartbeat checks
PROACTIVE_ACTIVE_HOURS_START=8       # Hour (0-23) to start proactive checks
PROACTIVE_ACTIVE_HOURS_END=22        # Hour (0-23) to stop proactive checks
PROACTIVE_HEARTBEAT_PATH=data/HEARTBEAT.md  # Path to heartbeat standing instructions
PROACTIVE_SCHEDULER_DB_PATH=./data/scheduler.db  # Scheduler database path

# Logging
LOG_LEVEL=info
